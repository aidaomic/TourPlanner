<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="350" prefWidth="500" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.AddTourWindowController">

    <top>
        <Label alignment="CENTER" prefWidth="Infinity" text="Please enter Name, Description and route information for the Tour down below!">
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin></Label>
    </top>

    <center>
        <VBox prefWidth="Infinity">
            <HBox>
                <Label alignment="CENTER" prefHeight="20" prefWidth="100" text="Tour Name:">
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin></Label>
                <TextField fx:id="tourName" prefHeight="20" prefWidth="380">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin></TextField>
            </HBox>
            <HBox>
                <Label alignment="CENTER" prefHeight="100" prefWidth="100" text="Description:">
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin></Label>
                <TextField fx:id="tourDescription" prefHeight="100" prefWidth="380">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin></TextField>
            </HBox>
            <HBox>
                <Label alignment="CENTER" prefHeight="50" prefWidth="100" text="Start:">
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin></Label>
                <TextField fx:id="tourStart" prefHeight="50" prefWidth="380">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin></TextField>
            </HBox>
            <HBox>
                <Label alignment="CENTER" prefHeight="50" prefWidth="100" text="End:">
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin></Label>
                <TextField fx:id="tourEnd" prefHeight="50" prefWidth="380">
               <HBox.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </HBox.margin></TextField>
            </HBox>
        </VBox>
    </center>

    <bottom>
        <Button alignment="CENTER" onAction="#createTour" text="Create Tour" BorderPane.alignment="CENTER">
        <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin></Button>
    </bottom>
</BorderPane>
